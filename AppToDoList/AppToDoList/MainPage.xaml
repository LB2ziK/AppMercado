<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppToDoList.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Listagem"                     
                     Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <StackLayout BackgroundColor="#D2B48C">
    
        <Label Text="Nome do Produto" />
        <Entry x:Name="txt_descricao"
               ClearButtonVisibility="WhileEditing" />

        <Label Text="Valor Estimado" />
        <Entry x:Name="txt_valorestimado"
               ClearButtonVisibility="WhileEditing" />

        <Label Text="Valor Pago"/>
        <Entry x:Name="txt_valorpago"
               ClearButtonVisibility="WhileEditing"/>



        <Button Text="Adicionar Produto" 
                Clicked="Button_Clicked" 
                TextColor="Black"
                BackgroundColor="#A0522D"/>

        <!-- <Button Text="Listagem" Clicked="ToolbarItem_Clicked" /> -->

    </StackLayout>

</ContentPage>
